<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="whiteBoardMessage"
            type="com.cometchat.pro.models.CustomMessage" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/cv_message_container"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/cc_message_bubble_right"
                android:backgroundTint="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/top_message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_collaborative_whiteboard"
                        android:tint="@color/textColorWhite" />

                    <TextView
                        android:id="@+id/whiteboard_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/icon"
                        android:padding="10dp"
                        android:textColor="@color/textColorWhite"
                        tools:text="Someone has shared whiteboard. Click below join button to check whiteboard" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/join_whiteboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top_message_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/launch"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryTextColor"
                    app:backgroundTint="@color/textColorWhite"
                    app:cornerRadius="8dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cv_message_container"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/cv_message_container"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="11:00 PM"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/reaction_group"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_message_container"
                android:layout_alignEnd="@id/cv_message_container"
                android:gravity="end">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/reactions_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:flexWrap="wrap"
                    app:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reaction_group"
                android:layout_alignEnd="@id/cv_message_container"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/thread_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    tools:text="2 replies" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>