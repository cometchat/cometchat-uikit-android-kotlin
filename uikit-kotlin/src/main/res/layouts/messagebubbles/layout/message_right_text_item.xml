<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="textMessage"
            type="com.cometchat.pro.models.TextMessage" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="end"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:id="@+id/cv_message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/cc_message_bubble_right">

                <include
                    android:id="@+id/replyItem"
                    layout="@layout/message_right_reply_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/go_txt_message"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/replyItem"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxWidth="250dp"
                    android:padding="10dp"
                    android:textColor="@color/textColorWhite"
                    tools:text="message" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/reaction_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_message_container"
                android:layout_marginStart="70dp"
                android:layout_alignEnd="@+id/cv_message_container"
                >

                <!--                <com.google.android.material.chip.ChipGroup-->
                <!--                    android:id="@+id/reactions_layout"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="end"-->
                <!--                    android:orientation="horizontal"-->
                <!--                    android:visibility="gone"-->
                <!--                    app:singleLine="true" />  -->
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/reactions_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:flexWrap="wrap"
                    app:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reaction_group"
                android:layout_alignEnd="@+id/cv_message_container"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/reply_avatar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/thread_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    tools:text="2 replies" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cv_message_container"
                android:layout_marginBottom="8dp"
                android:layout_toStartOf="@+id/cv_message_container"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="11:00 PM"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</layout>